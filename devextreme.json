{
  "applicationEngine": "angular",
  "build": {
    "commands": [
      {
        "command": "build-theme",
        "options": {
          "inputFile": "src/main/webapp/themes/metadata.base.json",
          "outputFile": "src/main/webapp/themes/generated/theme.base.css"
        }
      },      {
        "command": "build-theme",
        "options": {
          "inputFile": "src/main/webapp/themes/metadata.additional.json",
          "outputFile": "src/main/webapp/themes/generated/theme.additional.css"
        }
      },
      {
        "command": "export-theme-vars",
        "options": {
          "inputFile": "src/main/webapp/themes/metadata.base.json",
          "outputFile": "src/main/webapp/themes/generated/variables.base.scss"
        }
      },
      {
        "command": "export-theme-vars",
        "options": {
          "inputFile": "src/main/webapp/themes/metadata.additional.json",
          "outputFile": "src/main/webapp/themes/generated/variables.additional.scss"
        }
      }
    ]
  }
}
